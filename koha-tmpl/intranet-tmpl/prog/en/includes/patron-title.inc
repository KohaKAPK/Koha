[% SET invert_name = 1 %]
[%- IF ( borrower.borrowernumber ) %]
    [%- IF borrower.category_type == 'I' %]
        [%- borrower.surname %] [% IF 0 #wylaczone %] ([% borrower.othernames %]) [% END %]
    [%- ELSE %]
        [%- IF invert_name %]
            [%- borrower.surname %], [% borrower.firstname %] [% IF 0 %] ([% borrower.othernames %]) [% END %]
        [%- ELSE %]
            [%- borrower.firstname %] [% IF 0 %] ([% borrower.othernames %]) [% END %] [% borrower.surname %]
        [%- END -%]
    [%- END -%]
    ([% emailpro %])
[%- ELSIF ( borrowernumber ) %]
    [%- IF category_type == 'I' %]
        [%- surname %] [% IF 0 %] ([% othernames %]) [% END %]
    [%- ELSE %]
        [%- IF invert_name %]
            [%- surname %], [% firstname %] [% IF 0 %] ([% othernames %]) [% END %]
        [%- ELSE %]
            [%- firstname %] [% IF 0 %] ([% othernames %]) [% END %] [% surname %]
        [%- END %]
    [%- END -%]
    ([% emailpro -%])
[%- END -%]
